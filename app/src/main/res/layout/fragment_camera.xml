<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Layout for the camera fragment-->
    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--Oval shape-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/oval_face"
        android:layout_centerInParent="true"/>
    <!--LinearLayout for controls panel-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent">

        <!--Capture button to take photo-->
        <Button
            android:id="@+id/button_capture"
            android:background="@mipmap/capture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <!--Oval face button-->
        <Button
            android:id="@+id/oval_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_tag_faces_black_24dp"
            android:layout_toStartOf="@id/button_capture"/>
    </RelativeLayout>

</RelativeLayout>